                      android:text="@string/decks_object_oriented_title"
                      android:layout_gravity="center_horizontal"
                      android:contentDescription="@string/decks_android_content_desc"/>

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="4"
                          android:layout_marginEnd="15dp"
                          android:orientation="vertical">

                <TextView android:id="@+id/cardsCountTextView"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="10dp"
                          android:gravity="center_vertical"
                          android:textSize="14sp"
                          android:text="9999 cards"
                          android:layout_gravity="center_horizontal"
                          android:contentDescription="@string/decks_android_content_desc"/>

                <TextView android:id="@+id/lastTimeTextView"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="10dp"
                          android:gravity="start"
                          android:textSize="14sp"
                          android:maxLines="2"
                          android:text="Last attempt: Apr 16, 2019 22:52"
                          android:layout_gravity="center_horizontal"
                          android:contentDescription="@string/decks_android_content_desc"/>
            </LinearLayout>

            <LinearLayout android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:layout_marginEnd="0dp"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:orientation="vertical">

                <ImageView android:id="@+id/infoImageView"
                           android:tag="none"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_marginStart="5dp"
                           android:gravity="center_vertical"
                           android:src="@drawable/ic_info_grey"
                           android:layout_gravity="center_horizontal"
                           android:contentDescription="@string/decks_android_content_desc"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

